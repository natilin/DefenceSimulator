@model IEnumerable<DefenceSimulator.Models.Salvo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Origin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LaunchTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weapon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Origin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LaunchTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weapon.WeaponId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ThreatId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ThreatId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ThreatId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
